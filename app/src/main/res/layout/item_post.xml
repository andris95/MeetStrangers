<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_16sdp"
    android:elevation="@dimen/_4sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp"
            android:padding="@dimen/_16sdp"
            android:id="@+id/rv_post_header">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/iv_post_author_avatar"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:id="@+id/tv_post_author"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/iv_post_author_avatar"
                android:text="Andras Szaniszlo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/iv_post_author_avatar"
                android:layout_below="@+id/tv_post_author"
                android:id="@+id/tv_post_date"
                android:text="12:28"/>
            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_post_more"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_48dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_post_header"
            android:id="@+id/rv_post_body">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_post_photo"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:layout_below="@+id/iv_post_photo"
                android:id="@+id/tv_post_text"
                android:text="@string/lorem"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>